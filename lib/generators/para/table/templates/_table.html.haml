= resources_table(component: component, model: model) do |table|
  = table.header do
    <%- attributes.each do |field| -%>
    = table.header_for(:<%= field.name %>)
    <%- end -%>

  = table.rows(resources) do |resource|
    <%- attributes.each do |field| -%>
    = table.data_for(resource, :<%= field.name %>)
    <%- end -%>
