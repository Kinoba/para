- url = component_relation_path(@component, resource.class.name, resource)
= simple_form_for [:admin, @component, resource], url: url, as: :resource do |f|
  = f.error_notification

  .form-inputs
  <%- attributes.each do |field| -%>
    <%- if field.field_type -%>
    = f.<%= field.field_method %> :<%= field.name %>, as: :<%= field.field_type %>
    <%- else -%>
    = f.<%= field.field_method %> :<%= field.name %>
    <%- end -%>
  <%- end -%>

  .form-actions
    = link_to t('para.shared.cancel'), component_path(@component), class: 'btn btn-danger'
    = f.button :submit, class: 'btn-primary'
