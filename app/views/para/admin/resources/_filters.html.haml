.panel.panel-default
  .panel-heading
    %h3.panel-title= t('para.list.search_title')
  .panel-body
    = search_form_for @q, builder: SimpleForm::FormBuilder, url: component_path(@component) do |form|
      .input-group
        %span.input-group-addon
          %i.fa.fa-search

        = form.input_field fulltext_search_param_for(attributes), autofocus: true, label: t('para.shared.search'), class: 'form-control'

        %span.input-group-btn
          = form.submit t('para.shared.search'), class: 'btn btn-default'
