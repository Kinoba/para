%li.node{ data: { id: root.id } }
  %span.handle
    %i.fa.fa-sort.fa-fw
  = root.name
  %ul.tree
    %li.placeholder{ class: "#{ 'hidden' if root.depth >= @component.model.max_depth || root.children.any? }"}
    = render partial: 'para/admin/resources/tree_item', collection: root.children.ordered, as: :root
